{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./src",
    "removeComments": false,
    "downlevelIteration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {},
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "out/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
