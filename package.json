{
  "name": "clean-forms",
  "version": "0.0.3",
  "description": "Components to create clean forms with react",
  "main": "out/dist/lib/index.js",
  "types": "out/dist/lib/index.d.ts",
  "files": [
    "out/dist/lib",
    "src"
  ],
  "repository": "git@github.com:TobiasWalle/clean-forms.git",
  "author": "Tobias Walle",
  "license": "MIT",
  "scripts": {
    "build": "run-s clear tsc",
    "prepublish": "run-s validate-typescript lint test build",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "run-s lint:es lint:ts",
    "lint:es": "eslint \"**/*.+(js|jsx|ts|tsx)\"",
    "lint:ts": "tslint --project tsconfig.json -c tslint.json",
    "example": "parcel ./src/example/index.html --no-autoinstall",
    "validate-typescript": "tsc -p ./tsconfig.json --noemit",
    "clear": "rimraf out",
    "clear-dist": "rimraf out/dist",
    "clear-test": "rimraf out/test",
    "watch": "tsc --watch",
    "p": "plop",
    "tsc": "tsc --project tsconfig.lib.json",
    "check-types": "tsc --project tsconfig.json --noEmit",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.0",
    "@testing-library/react": "^9.3.0",
    "@testing-library/react-hooks": "^3.1.1",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.20",
    "@types/node": "^12.11.7",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "coveralls": "^3.0.7",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.6.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "jest": "^24.9.0",
    "jest-dom": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-hooks-testing-library": "^0.6.0",
    "react-json-view": "^1.19.1",
    "react-test-renderer": "^16.11.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.28",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/lib/**/*.{ts,tsx}"
    ],
    "globals": {
      "tsConfigFile": "tsconfig.test.json"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup-after-env.ts"
    ]
  }
}
