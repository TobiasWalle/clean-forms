{
  "name": "clean-forms",
  "version": "0.0.3",
  "description": "Components to create clean forms with react",
  "main": "out/dist/lib/index.js",
  "types": "out/dist/lib/index.d.ts",
  "files": [
    "out/dist/lib",
    "src"
  ],
  "repository": "git@github.com:TobiasWalle/clean-forms.git",
  "author": "Tobias Walle",
  "license": "MIT",
  "scripts": {
    "prepublish": "run-s validate-typescript lint test build",
    "start": "run-s storybook",
    "storybook": "run-p watch-storybook start-storybook",
    "start-storybook": "start-storybook -p 9001 -c .storybook",
    "watch-storybook": "tsc --watch --project tsconfig.storybook.json",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "build": "run-s clear tsc",
    "validate-typescript": "tsc -p ./tsconfig.json --noemit",
    "clear": "rimraf out",
    "clear-dist": "rimraf out/dist",
    "clear-storybook": "rimraf out/storybook",
    "clear-test": "rimraf out/test",
    "watch": "tsc --watch",
    "p": "plop",
    "tsc": "tsc --project tsconfig.lib.json",
    "check-types": "tsc --project tsconfig.json --noEmit",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.1.6",
    "@storybook/addons": "^4.1.6",
    "@storybook/cli": "^4.1.6",
    "@storybook/react": "^4.1.6",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__react": "^4.0.0",
    "coveralls": "^3.0.2",
    "emotion": "^9.2.5",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "jest": "^23.4.0",
    "npm-run-all": "^4.1.5",
    "plop": "^2.2.0",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "react-emotion": "^9.2.5",
    "react-json-view": "^1.19.1",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.2",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "peerDependencies": {
    "react": "^16.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/lib/**/*.{ts,tsx}"
    ],
    "globals": {
      "tsConfigFile": "tsconfig.test.json"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ]
  }
}
