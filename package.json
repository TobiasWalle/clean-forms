{
  "name": "clean-forms",
  "version": "0.0.3",
  "description": "Components to create clean forms with react",
  "main": "out/dist/lib/index.js",
  "types": "out/dist/lib/index.d.ts",
  "files": [
    "out/dist/lib",
    "src"
  ],
  "repository": "git@github.com:TobiasWalle/clean-forms.git",
  "author": "Tobias Walle",
  "license": "MIT",
  "scripts": {
    "prepublish": "run-s validate-typescript lint test build",
    "start": "run-s storybook",
    "storybook": "run-p watch-storybook start-storybook",
    "start-storybook": "start-storybook -p 9001 -c .storybook",
    "watch-storybook": "tsc --watch --project tsconfig.storybook.json",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "run-s lint:es lint:ts",
    "lint:es": "eslint \"**/*.+(js|jsx|ts|tsx)\"",
    "lint:ts": "tslint --project tsconfig.json -c tslint.json",
    "build": "run-s clear tsc",
    "validate-typescript": "tsc -p ./tsconfig.json --noemit",
    "clear": "rimraf out",
    "clear-dist": "rimraf out/dist",
    "clear-storybook": "rimraf out/storybook",
    "clear-test": "rimraf out/test",
    "watch": "tsc --watch",
    "p": "plop",
    "tsc": "tsc --project tsconfig.lib.json",
    "check-types": "tsc --project tsconfig.json --noEmit",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.18",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.4",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__react": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "coveralls": "^3.0.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-hooks-testing-library": "^0.3.6",
    "react-json-view": "^1.19.1",
    "react-testing-library": "^5.9.0",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.3",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/lib/**/*.{ts,tsx}"
    ],
    "globals": {
      "tsConfigFile": "tsconfig.test.json"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup-after-env.ts"
    ]
  }
}
