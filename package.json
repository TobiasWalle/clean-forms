{
  "name": "clean-forms",
  "version": "0.0.0",
  "description": "Components to create clean forms with react",
  "main": "index.js",
  "repository": "git@github.com:TobiasWalle/clean-forms.git",
  "author": "Tobias Walle",
  "license": "MIT",
  "scripts": {
    "start": "run-s build storybook-watch",
    "storybook-watch": "run-p watch storybook",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "build": "run-s clear tsc",
    "clear": "rimraf dist",
    "watch": "tsc --watch",
    "p": "plop",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@storybook/cli": "^3.3.10",
    "@storybook/react": "^3.3.10",
    "@types/enzyme": "^3.1.7",
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/storybook__react": "^3.0.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "jest": "^22.1.4",
    "npm-run-all": "^4.1.2",
    "plop": "^1.9.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "peerDependencies": {
    "react": "^16.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ]
  }
}
