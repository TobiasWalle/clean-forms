{
  "name": "clean-forms",
  "version": "0.0.3",
  "description": "Components to create clean forms with react",
  "main": "out/dist/lib/index.js",
  "types": "out/dist/lib/index.d.ts",
  "files": ["out/dist/lib"],
  "repository": "git@github.com:TobiasWalle/clean-forms.git",
  "author": "Tobias Walle",
  "license": "MIT",
  "scripts": {
    "prepublish": "run-s lint test build",
    "start": "run-s clear-storybook storybook",
    "storybook": "run-p watch-storybook start-storybook",
    "start-storybook": "start-storybook -p 9001 -c .storybook",
    "watch-storybook": "tsc --watch --project tsconfig.storybook.json",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "build": "run-s clear tsc",
    "clear": "rimraf out",
    "clear-dist": "rimraf out/dist",
    "clear-storybook": "rimraf out/storybook",
    "clear-test": "rimraf out/test",
    "watch": "tsc --watch",
    "p": "plop",
    "tsc": "tsc --project tsconfig.lib.json",
    "check-types": "tsc --project tsconfig.json --noEmit",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.11",
    "@storybook/addons": "^3.3.11",
    "@storybook/cli": "^3.3.11",
    "@storybook/react": "^3.3.11",
    "@types/enzyme": "^3.1.8",
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.6",
    "coveralls": "^3.0.0",
    "emotion": "^8.0.12",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "jest": "^22.1.4",
    "npm-run-all": "^4.1.2",
    "plop": "^1.9.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-emotion": "^8.0.12",
    "react-json-view": "^1.16.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.2",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "peerDependencies": {
    "react": "^16.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/lib/**/*.{ts,tsx}"
    ],
    "mapCoverage": true,
    "globals": {
      "tsConfigFile": "tsconfig.test.json"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "dependencies": {
    "prop-types": "^15.6.0"
  }
}
